    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.4.5",
    "@vercel/node": "^3.0.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.6.1",
